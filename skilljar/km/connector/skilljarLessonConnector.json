{
  "$id": "skilljar_lessonConnector",
  "$schema": "https://schema.yext.com/config/km/connector/v4",
  "displayName": "Skilljar Lesson Connector",
  "entityTypes": [
    "skilljar_lesson"
  ],
  "source": {
    "sourceConfig": {
      "nativeSourceConfig": {
        "source": "skilljar",
        "operation": "fetchLessons",
        "inputs": {
          "domainName": "${{domainName}}",
          "apiKey": "${{apiKey}}"
          }
        }
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "Entity ID",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "Name",
        "path": "title"
      },
      {
        "type": "JSON",
        "header": "course.title",
        "path": "course.title"
      },
      {
        "type": "JSON",
        "header": "Rich Text Description",
        "path": "description_html"
      },
      {
        "type": "JSON",
        "header": "Keywords",
        "path": "search_keywords"
      }
    ]
  },
  "transforms": [
    {
      "convertToRichText": {
        "inputHeaders": {
          "headers": [
            "description_html"
          ]
        },
        "inputFormat": "HTML"
      }
    }
  ],
  "mappings": [
    {
      "header": "Rich Text Description",
      "field": "richTextDescriptionV2",
      "subfieldPath": [
        {
          "name": "json"
        }
      ],
      "clearValueIfBlank": false
    },
    {
      "field": "entityId",
      "header": "Entity ID",
      "subfieldPath": []
    },
    {
      "field": "name",
      "header": "Name",
      "subfieldPath": []
    },
    {
      "field": "keywords",
      "header": "Keywords",
      "subfieldPath": []
    }
  ],
  "scheduleConfig": {
    "customSchedule": {
      "timeZone": "America/New_York",
      "startDate": "2022-02-14",
      "startTime": "00:00",
      "frequencyType": "DAILY"
    },
    "runMode": "COMPREHENSIVE"
  },
  "comprehensiveModeConfig": {
    "comprehensiveSet": "ENTITIES_CREATED_BY_THIS_CONNECTOR",
    "actionOnMissingEntities": "DELETE"
  }
}
